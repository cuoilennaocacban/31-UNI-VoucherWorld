                      RenderTransformOrigin="0.5,0.5"
                      Stretch="Uniform"
                      UseLayoutRounding="False"
                      Visibility="Visible" />
                <Grid Margin="12">
                    <Grid.Background>
                        <SolidColorBrush Opacity="0.7" Color="{StaticResource MyOrangeBrushAlter}" />
                    </Grid.Background>
                    <TextBlock x:Name="GiftCodeTextBlock"
                               Margin="6"
                               HorizontalAlignment="Center"
                               FontSize="72"
                               FontWeight="Bold"
                               Foreground="Black"
                               Text="ajs645x" />
                </Grid>
                <Grid Margin="12">
                    <Grid.Background>
                        <SolidColorBrush Opacity="0.7" Color="{StaticResource MyOrangeBrushAlter}" />
                    </Grid.Background>
                    <TextBlock x:Name="TotalPointTextBlock"
                               HorizontalAlignment="Center"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="Black"
                               Text="Point: 30" />
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsMenuEnabled="True" IsVisible="True">
            <shell:ApplicationBarIconButton x:Name="email"
                                            Click="email_Click"
                                            IconUri="/Assets/AppBar/email.png"
                                            Text="Send Email" />
            <shell:ApplicationBarIconButton x:Name="fb"
                                            Click="fb_Click"
                                            IconUri="/Assets/AppBar/fb.png"
                                            Text="Facebook" />
            <shell:ApplicationBarIconButton x:Name="twitter"
                                            Click="twitter_Click"
                                            IconUri="/Assets/AppBar/twitter.png"
                                            Text="Twitter" />
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>